extends ./layout/mainLayout.pug

block content 
    form(action="/createUser" method="POST" class="mt-12 flex flex-col w-full max-w-80 md:max-w-1/2 mx-auto gap-2")
        label.text-md.font-semibold.capitalize.cursor-pointer(for="user") please enter new username :
        input(class="userName w-full border border-1.border-black-500 rounded-md focus:outline-none px-2 py-3 text-lg" type="text" name="username" id="user")
        button(class="border-2 border-green-800 w-full max-w-1/3 px-4 py-2 cursor-pointer hover:bg-green-800 hover:border-none hover:text-white capitalize text-xl rounded-md transition-colors") submit



