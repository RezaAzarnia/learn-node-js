<%- include('./layout/head.ejs')%> <%- include('./layout/navigation.ejs')%>
<main class="w-full max-w-7xl mx-auto mt-12">
  <h1 class="text-4xl text-center capitalize font-semibold">add book</h1>
  <form action="/createBook" method="POST" class="mt-4">
    <div
      class="flex flex-col w-full max-w-4/5 sm:max-w-1/2 border rounded-2xl p-8 mx-auto gap-2"
    >
      <label
        for="bookName"
        class="text-md font-semibold capitalize cursor-pointer"
        >please enter new bookName :
      </label>
      <input
        type="text"
        id="bookName"
        name="bookName"
        class="w-full border border-black-500 rounded-md focus:outline-none px-2 py-3 text-lg"
      />
      <label for="price" class="text-md font-semibold capitalize cursor-pointer"
        >please enter new price :
      </label>
      <input
        type="number"
        id="price"
        name="price"
        class="w-full border border-black-500 rounded-md focus:outline-none px-2 py-3 text-lg"
      />
      <label
        for="bookCount"
        class="text-md font-semibold capitalize cursor-pointer"
        >please enter book count :
      </label>
      <input
        type="number"
        id="bookCount"
        name="bookCount"
        class="w-full border border-black-500 rounded-md focus:outline-none px-2 py-3 text-lg"
      />
      <button
        class="border-2 border-green-800 w-full mt-5 px-4 py-3 cursor-pointer hover:bg-green-800 hover:border-none hover:text-white capitalize text-xl rounded-lg transition-colors"
      >
        submit
      </button>
    </div>
  </form>
</main>
<%-include('./layout/end.ejs')%>
