<%- include('partial/head.ejs') %>
</head>
  <body>
    <%- include('partial/navigation.ejs') %>
    <main class="w-full max-w-6xl mx-auto mt-12">
      <% if(users.length > 0 ){ %>
        <div class="grid grid-cols-5 grid-rows-4 justify-center justify-items-center gap-2">
        <% users.forEach(user=>{ %>
                <div class="border border-gray-400 size-full py-4">
                  <p class="text-center text-2xl text-wrap">
                    <%=user.id %>-<%=user.name %>
                  </p>
                  <button
                    class="remove-btn w-full cursor-pointer text-center mt-4 mx-auto"
                    data-id=<%=user.id %>
                  >
                    remove user
                  </button>
                </div>
        <% }) %>
        </div>
      <%} else { %>
          <h1 class="text-center text-2xl mt-8">welcome home</h1>
      <% } %>
    </main>
    <script src="/js/script.js"></script>
  <%- include('partial/end.ejs') %>