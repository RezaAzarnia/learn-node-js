extends ./layout/mainLayout.pug

block content 
    if users.length > 0
        .w-full.grid.grid-cols-5.grid-rows-4.justify-center.justify-items-center.gap-2 
            each user in users
                .border.border-gray-400.size-full.py-4
                    p.text-center.text-2xl.text-wrap  -#{user.name}
                    button(class="remove-btn w-full cursor-pointer text-center mt-4 mx-auto" data-id=user.id)  remove user
    else 
        h1.text-center.text-2xl.mt-8 there is no user

    each user in users.filter(u=>u.id > 2)
        p.text-center.text-2xl  -#{user.name}

block scripts 
    script(src="/js/script.js") 

