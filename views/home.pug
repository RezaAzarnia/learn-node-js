doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet" href="/css/output.css")
    body 
        header
            button(class="block cursor-pointer focus:outline-none p-4 md:hidden border-2 border-yellow-500 rounded-md px-4 py-2 m-2 hover:bg-yellow-500 hover:border-white transition-colors" id="toggle-button") open navbar
            ul(class="flex flex-col md:flex-row md:static md:w-full justify-start align-center gap-8 p-4 bg-yellow-500 w-52 absolute top-0 bottom-0 transition-all h-full -translate-x-60 md:translate-x-0" id='slider-list')
                li(class="text-xl font-semibold hover:text-blue-800 transition-colors text-blue-800")
                    a(href="/" ) home 
                li(class="text-xl font-semibold hover:text-blue-800 transition-colors")
                    a(href="/users") add user
                li(class="text-xl font-semibold hover:text-blue-800 transition-colors")
                    a(href="/404") not found

        main.w-full.max-w-6xl.mx-auto.mt-12
            if users.length > 0
                .w-full.grid.grid-cols-8.grid-rows-4.justify-center.justify-items-center.gap-2 
                    each user in users
                        .border.border-gray-400.size-full.py-4
                            p.text-center.text-2xl  -#{user.name}
                                //- button(class="w-full cursor-pointer text-center mt-4 mx-auto" onclick=`alert("${user.name}")`)  click
                            button(class="remove-btn w-full cursor-pointer text-center mt-4 mx-auto" data-id=user.id)  remove user
            else 
                h1.text-center.text-2xl.mt-8 there is no user

            each user in users.filter(u=>u.id > 2)
                p.text-center.text-2xl  -#{user.name}


    script(src="/js/slider.js") 
    script(src="/js/script.js") 


