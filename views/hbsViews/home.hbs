{{#if prodsLength}}
  <div
    class="grid grid-cols-5 grid-rows-4 justify-center justify-items-center gap-2"
  >
    {{#each users}}
      <div class="border border-gray-400 size-full py-4">
        <p class="text-center text-2xl text-wrap">
          {{this.id}}-{{this.name}}
        </p>
        <button
          class="remove-btn w-full cursor-pointer text-center mt-4 mx-auto"
          data-id={{this.id}}
        >
          remove user
        </button>
      </div>
    {{/each}}
  </div>
{{else}}
  <h1 class="text-center text-2xl mt-8">welcome home</h1>
{{/if}}

<script src="/js/script.js"></script>