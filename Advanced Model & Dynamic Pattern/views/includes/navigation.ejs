<div class="overlay fixed top-0 left-0 h-screen w-full bg-black/50 hidden md:hidden z-0"></div>
<header>
  <button
      class="block cursor-pointer focus:outline-none p-4 md:hidden border-2 border-cyan-600 rounded-md px-4 py-2 m-2 hover:bg-cyan-600 hover:border-white hover:text-white transition-colors"
      id="toggle-button"
    >
      open navbar
  </button>
  
  <ul
      id="slider"
      class="flex flex-col md:flex-row md:static md:w-full justify-start align-center gap-8 p-4 bg-cyan-600 [&>li]:cursor-pointer w-64 z-50 absolute top-0 bottom-0 transition-all -translate-x-64 md:translate-x-0"
    >
      <li
        class="text-xl font-semibold hover:text-teal-900 capitalize transition-colors <%= path === '/' ? "text-teal-900" : "text-white" %>"
      >
        <a href="/"> home </a>
      </li>
      <li
        class="text-xl font-semibold hover:text-teal-900 capitalize transition-colors <%= path.includes('/products') ? "text-teal-900" : "text-white" %> " >
        <a href="/products">products</a>
      </li>
      <li
        class="text-xl font-semibold hover:text-teal-900 capitalize transition-colors <%= path === '/cart' ? "text-teal-900" : "text-white" %> " >
        <a href="/cart">cart</a>
      </li>
      <li
        class="text-xl font-semibold hover:text-teal-900 capitalize transition-colors <%= path === '/orders' ? "text-teal-900" : "text-white" %> " >
        <a href="/orders">orders</a>
      </li>
      <li
        class="text-xl font-semibold hover:text-teal-900 capitalize transition-colors <%= path === '/admin/add-product' ? "text-teal-900" : "text-white" %> " >
        <a href="/admin/add-product">add product</a>
      </li>
      <li
        class="text-xl font-semibold hover:text-teal-900 capitalize transition-colors <%= path === '/admin/products' ? "text-teal-900" : "text-white" %> " >
        <a href="/admin/products">admin products</a>
      </li>
      <li
        class="text-xl font-semibold hover:text-teal-900 capitalize transition-colors <%= path === '404' ? "text-teal-900" : "text-white" %>"
      >
        <a href="/404">not found</a>
      </li>
  </ul>
</header>